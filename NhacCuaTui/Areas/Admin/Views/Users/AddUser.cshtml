<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">THÊM NGƯỜI DÙNG</h5>
        <form action="~/Admin/Users/ThemNguoiDung" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="username" class="form-label">Tài khoản</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" name="username" required>
                <div id="emailHelp" class="form-text">Trường này sẽ là tên để đăng nhập.</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="password" required>
            </div>
            <div class="mb-3">
                <label for="fullname" class="form-label">Tên đầy đủ</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" name="fullname" required>
                <div id="emailHelp" class="form-text">Tên hiển thị trong web.</div>
            </div>
            <div class="mb-3">
                <label for="phonenumber" class="form-label">Số điện thoại</label>
                <input type="tel" class="form-control" aria-describedby="emailHelp" name="phonenumber" required>
                <div id="emailHelp" class="form-text">Số điện thoại của bạn.</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" required>
                <div id="emailHelp" class="form-text">Địa chỉ email để lấy lại mật khẩu.</div>
            </div>
            <div class="mb-3">
                <label for="role" class="form-label">Vai trò</label>
                <select id="Select" class="form-select" name="role">
                    <option value="Người dùng">Người dùng</option>
                    <option value="Nhân viên">Nhân viên</option>
                </select>
            </div>
            @if (Session["AddUser_Error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @Session["AddUser_Error"].ToString()
                </div>
            }
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add_alert">Thêm</button>
            <button type="button" class="btn btn-default" onclick="window.location.href = '../../Admin/Users/Index'" style="margin-left: 20px;">Quay lại</button>

            <div class="modal" id="add_alert" tabindex="-1">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Thêm người dùng</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Bạn có muốn thêm người dùng này?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn me-auto" data-bs-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-success" data-bs-dismiss="modal">Đồng ý</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>